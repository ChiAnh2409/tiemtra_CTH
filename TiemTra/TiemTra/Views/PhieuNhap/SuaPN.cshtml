@model TiemTra.Models.PhieuNhap
@{
    ViewBag.Title = "SuaPN";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Sửa nhân viên</title>

    <link href="~/css/NguyenLieu.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Sửa Phiếu
        </div>
        <form method="post" action="SuaPN">

            <div class="field" style="display:none">
                <input type="text" name="IdPN" value="@Model.IdPN" readonly>
            </div>
            <div class="field">
                <input type="text" name="TenPhieu" value="@Model.TenPhieu">
                <label>Tên Phiếu</label>
            </div>

            <div class="field">
                
                    <input type="date" name="NgayNhap" value="@Model.NgayNhap.ToString("yyyy-MM-dd")" />
               
                <label>Ngày Nhập</label>
            </div>


            <div class="field" style="display:none">
                <input type="text" name="TinhTrang" value="@Model.TinhTrang">
                <br />
                <label>Tình trạng</label>
            </div>
            <br />
            <div style="display:none">
                <label>Tổng tiền</label>
                <input type="text" name="TongTien" value="@Model.TongTien">

            </div>

            <div class="field">
                <input type="submit" value="Sửa">
            </div>
            <div class="signup-link">
                <a href="/PhieuNhap/PhieuNhap">Quay về</a>
            </div>

        </form>
    </div>
</body>
</html>